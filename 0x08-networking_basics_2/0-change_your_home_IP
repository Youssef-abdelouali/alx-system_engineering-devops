#!/usr/bin/env bash
# This script configures an Ubuntu server as follows:
#   - localhost resolves to 127.0.0.2
#   - facebook.com resolves to 8.8.8.8

# Copy the current hosts file to a new file in the user's home directory
cp /etc/hosts ~/hosts.new

# Add an entry for localhost resolving to 127.0.0.2 in the new hosts file
echo "127.0.0.2		localhost" > ~/hosts.new

# Append an entry for facebook.com resolving to 8.8.8.8 in the new hosts file
echo "8.8.8.8		facebook.com" >> ~/hosts.new

# Overwrite the original hosts file with the modified one
cp -f ~/hosts.new /etc/hosts

