#!/usr/bin/env bash
# This script displays "Best School" 10 times, but on the 9th iteration, it displays "Hi" on a new line

# Initialize counter
counter=1

# Execute loop while counter is less than or equal to 10
while [ $counter -le 10 ]; do
    # Check if it's the 9th iteration
    if [ $counter -eq 9 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    # Increment counter
    ((counter++))
done
